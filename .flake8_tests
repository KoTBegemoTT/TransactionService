[flake8]
ignore =
    # Found too short name
    WPS111,
    # Found underscored number name pattern
    WPS114,
    # Found module with too many imports
    WPS201,
    # Found Found overused expression
    WPS204,
    # Found too many `assert` statements
    WPS218,
    # Found too many module members
    WPS202,
    # Found too many local variables
    WPS210,
    # Found too many arguments
    WPS211,
    # Found line with high Jones Complexity
    WPS221,
    # Found string literal over-use
    WPS226,
    # Found `f` string
    WPS305,
    # incorrect multi-line parameters
    WPS317,
    WPS318,
    WPS319,
    # Found a line that starts with a dot
    WPS348,
    # Found magic number
    WPS432,
    # Found block variables overlap: session
    WPS440,
    # Found control variable used after block
    WPS441,
    # Found outer scope names shadowing
    WPS442,
    # Found imports collision
    WPS458,
    # Missing docstrings
    D100,
    D101,
    D102,
    D103,
    D104,
    # Use of assert detected
    S101,
    # trailing comma prohibited
    C819
